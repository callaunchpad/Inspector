{
    "manifest_version": 2,
    "name": "Inspector",
    "version": "1.0.0",
    "permissions": ["activeTab", "https://us-central1-inspector-project.cloudfunctions.net/handler"],
    "description": "That's fake news",
    "icons": {
        "48": "icon_48.png",
        "128": "icon_128.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": "icon.png"
    }
}