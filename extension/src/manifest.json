{
    "manifest_version": 2,
    "name": "Inspector",
    "version": "1.0.0",
    "permissions": ["activeTab", "tabs", "https://us-central1-inspector-project.cloudfunctions.net/handler", "<all_urls>"],
    "description": "That's fake news",
    "icons": {
        "48": "icon_48.png",
        "128": "icon_128.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "background": {
        "scripts": ["./dist/background.bundle.js"]
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "A popup will come here"
    }
}